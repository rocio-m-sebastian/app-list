<div class="filters">
    <h4 class="filters__title u-show u-hide--s768 u-center-text">Filtros</h4>
    <ul class="filters__list">
        <li class="filters__item">
            <div class="u-flex">
                <span class="wrapper-svg u-icon u-flex--inline">
                    {% include '../svg/icon-podium.twig' %}
                </span>
                <span>Puesto</span>
            </div>
            <input value="2500" type="number" id="js-puesto" name="puesto"  min="1" max="12700">
        </li>
        <li class="filters__item">
            <div class="u-flex u-flex--justify-between">
                <div class="u-flex">
                    <span>
                        {% include '../svg/icon-location.twig' %}
                    </span>
                    <span>Provincia</span>
                </div>
                <span class="filters__more u-flex--inline" id="js-showPlaces">
                    +
                </span>
            </div>
            <div class="filters__checks u-hide" id="selectPlace"></div>
        </li>
        <li class="filters__item">
            <div class="u-flex u-flex--justify-between">
                <div class="u-flex">
                    <span class="wrapper-svg u-icon u-flex--inline">
                        {% include '../svg/icon-doctor.twig' %}
                    </span>
                    <span>Especialidad</span>
                </div>
                <span class="filters__more u-flex--inline" id="js-showSubjects">
                    +
                </span>
            </div>
            <div class="filters__checks u-hide" id="selectSubject"></div>
        </li>
        <li class="filters__item">
            <div class="u-flex u-flex--justify-between">
                <div class="u-flex">
                    <span class="wrapper-svg u-icon u-flex--inline">
                        {% include '../svg/icon-hospital.twig' %}
                    </span>
                    <span>Centro</span>
                </div>
                <span class="filters__more u-flex--inline" id="js-showCenters">
                    +
                </span>
            </div>
            <div class="filters__checks u-hide" id="selectCenter"></div>
        </li>
    </ul>
</div>
