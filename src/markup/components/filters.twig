<div class="filters">
    <h4 class="filters__title u-show u-hide--s768">Filtros</h4>
    <span class="wrapper-svg u-icon u-flex--inline filters__close u-show u-hide--s768" {% if aria_title is empty %}aria-hidden="true"{% else %}aria-label="{{ aria_title }}"{% endif %}>
        {% include '../svg/icon-close.twig' %}
    </span>
    <ul class="filters__list">
        <li class="filters__item filters__item--filter1 u-flex">
            <span class="wrapper-svg u-icon u-flex--inline" {% if aria_title is empty %}aria-hidden="true"{% else %}aria-label="{{ aria_title }}"{% endif %}>
                {% include '../svg/icon-podium.twig' %}
            </span>
            <input value="2500" type="number" id="js-puesto" name="puesto"  min="1" max="12700">
        </li>
        <li class="filters__item filters__item--place u-flex">
            <span class="wrapper-svg u-icon u-flex--inline" {% if aria_title is empty %}aria-hidden="true"{% else %}aria-label="{{ aria_title }}"{% endif %}>
                {% include '../svg/icon-location.twig' %}
            </span>
            <select name="" id="selectPlace">Ciudad</select>
        </li>
        <li class="filters__item filters__item--filter3 u-flex">
            <span class="wrapper-svg u-icon u-flex--inline" {% if aria_title is empty %}aria-hidden="true"{% else %}aria-label="{{ aria_title }}"{% endif %}>
                {% include '../svg/icon-doctor.twig' %}
            </span>
            <select name="" id="selectSubject"></select>
        </li>
        <li class="filters__item filters__item--filter5 u-flex">
            <span class="wrapper-svg u-icon u-flex--inline" {% if aria_title is empty %}aria-hidden="true"{% else %}aria-label="{{ aria_title }}"{% endif %}>
                {% include '../svg/icon-hospital.twig' %}
            </span>
            <select name="" id="selectCenter"></select>
        </li>
    </ul>
</div>
